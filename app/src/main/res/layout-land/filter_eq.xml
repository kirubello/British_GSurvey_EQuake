<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFAFA"
    tools:context=".Filter_eq">

    <include

        android:id="@+id/include"
        layout="@layout/activity_maps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toStartOf="@+id/horizontalScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_Rangepicker" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/dateDisplay"
        app:layout_constraintVertical_bias="1.0">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cell_shape"
            android:stretchColumns="1"
            android:textColor="@color/black"
            tools:visibility="visible">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="@color/black">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:text="@string/eq_type"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:backgroundTint="#d6e7ff"
                    android:gravity="center"
                    android:text="@string/largest_magnitude"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="match_parent"

                    android:background="@drawable/cell_shape"
                    android:backgroundTint="#d6e7ff"
                    android:backgroundTintMode="src_over"
                    android:gravity="center"
                    android:text="@string/depth_shallowest"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:background="@drawable/cell_shape"
                    android:backgroundTint="#d6e7ff"
                    android:gravity="center"
                    android:text="@string/depth_deepest"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="@color/black">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:backgroundTint="#d6e7ff"
                    android:padding="3dip"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/location1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/location2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/location3"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:text="@string/dash"
                    android:textColor="@color/black" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="@color/black">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:backgroundTint="#d6e7ff"
                    android:padding="3dip"
                    android:text="@string/coordiants"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/coordinates1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/coordinate2"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/coordinates3"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="@color/black">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:backgroundTint="#d6e7ff"
                    android:padding="3dip"
                    android:text="Depth"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/depth1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/depth2"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/depth3"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="@color/black">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:backgroundTint="#d6e7ff"
                    android:padding="3dip"
                    android:text="@string/magnitude"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mag1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/mag2"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/mag3"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="@color/black">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:backgroundTint="#d6e7ff"
                    android:padding="3dip"
                    android:text="@string/date"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/date2"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/date3"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="@string/dash"
                    android:textColor="@color/black" />


            </TableRow>

        </TableLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/Northerly"
        android:layout_width="89dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:text="@string/northrly"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_Rangepicker" />

    <Button
        android:id="@+id/Southerly"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:text="@string/southrly"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Northerly"
        app:layout_constraintTop_toBottomOf="@+id/date_Rangepicker" />

    <Button
        android:id="@+id/Westerly"
        android:layout_width="92dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:text="@string/westerly"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Southerly"
        app:layout_constraintTop_toBottomOf="@+id/dateDisplay" />

    <Button
        android:id="@+id/Easterly"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:text="@string/easterly"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Westerly"
        app:layout_constraintTop_toBottomOf="@+id/dateDisplay" />

    <Button
        android:id="@+id/date_Rangepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/filter_date_period"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateDisplay"
        android:layout_width="205dp"
        android:layout_height="46dp"
        android:background="@drawable/rounded_edit"
        android:gravity="center"
        android:text="@string/selected_range_date"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/date_Rangepicker"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            layout="@layout/bottom_bar_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>